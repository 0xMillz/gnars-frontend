generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Gnar {
  gnarId         Int      @id
  startTimestamp DateTime?
  endTimestamp   DateTime?
  bids           Bid[]
  winner         Winner?
}

model Bid {
  id              Int      @id @default(autoincrement())
  gnarId          Int
  sender          String
  amount          String
  timestamp       DateTime
  transactionHash String   @unique
  gnar            Gnar?    @relation(fields: [gnarId], references: [gnarId])

  @@index([gnarId])
}

model Winner {
  gnarId    Int      @id
  amount    String
  sender    String
  timestamp DateTime
  gnar      Gnar?    @relation(fields: [gnarId], references: [gnarId])
}
